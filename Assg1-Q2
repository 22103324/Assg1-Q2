#include<stdio.h>
int main()
{
    int n;
    int sum=0;
    printf("Enter the no of elements in array: ");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the elements of the array:");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("The given array is: ");
    for(int i=0;i<n;i++)
    {
        printf("%d ",arr[i]);
    }
    for(int i=0;i<n;i++)
    {
        sum+=arr[i];
    }
    float avg=sum/n;
    printf("\nThe average of number will be: %0.2f",avg);
    }
